<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="rellis" id="hs-0.1.0-drop_table">
        <preConditions onFail="MARK_RAN"><tableExists schemaName="alert" tableName="event_match"/></preConditions>
        <dropTable cascadeConstraints="true"
                   schemaName="alert"
                   tableName="event_match"/>
    </changeSet>

    <changeSet author="rellis" id="hs-0.1.0-event_match">
        <createTable tableName="event_match">

            <column name="tenant_id" type="text" defaultValue="opennms-prime">
                <constraints nullable="false"/>
            </column>

            <column name="event_match_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="alert_definition_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="value" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="tenant_id, event_match_id"
                       constraintName="event_match_pk"
                       tableName="event_match"/>

        <createSequence sequenceName="event_match_nxt_id"/>

    </changeSet>
</databaseChangeLog>
