#!/bin/bash

REALM="opennms"
USERID=""
TOKEN=""

usage()
{
	echo "Usage: $0 [-hv] [-R <realm>] [-t <access-token>] [-U <user-id>]"
	echo
	echo "  -h  Display this help"
	echo "  -v  Verbose curl output"
}

while getopts "hR:t:U:v" arg
do
	case "$arg" in
		h)
			usage
			exit 0
			;;

		R)
			REALM="${OPTARG}"
			;;

		t)
			TOKEN="${OPTARG}"
			;;

		U)
			USER_ID="${OPTARG}"
			;;

		v)
			CURL_OPTS=("${CURL_OPTS[@]}" -v)
			;;

		*)
			usage >&2
			exit 1
			;;
	esac
done

URL="http://localhost:9000/admin/realms/${REALM}/users/${USERID}/role-mappings/realm"

{
	curl "${CURL_OPTS[@]}" -X GET \
		-H "Authorization: Bearer ${TOKEN}" \
		-H 'Content-Type: application/json' \
		"${URL}"
}
