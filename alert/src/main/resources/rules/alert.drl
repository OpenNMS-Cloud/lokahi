                         AlertSeverity.WARNING.isLessThanOrEqual(severity) &&
                         AlertSeverity.CRITICAL.isGreaterThan(severity) &&
                         serviceType != null &&
                         alertAckTime == null)
    not( Alert( this == $alert ) over window:time( 1h ) )
  then
    alertService.escalateAlert($alert, new Date($sessionClock.getCurrentTime()));
end
*/

rule "cleanUp"
  salience 0
  when
    $sessionClock : SessionClock()
    $alert : Alert(severity.isLessThanOrEqual(AlertSeverity.NORMAL) &&
                       (alertAckTime == null))
    not( Alert( this == $alert ) over window:time( 5m ) )
  then
    alertService.deleteAlert($alert);
end

rule "fullCleanUp"
  salience 0
  when
    $sessionClock : SessionClock()
    $alert : Alert(severity.isLessThanOrEqual(AlertSeverity.NORMAL))
    not( Alert( this == $alert ) over window:time( 1d ) )
  then
    alertService.deleteAlert($alert);
end

rule "GC"
  salience 0
  when
    $sessionClock : SessionClock()
    $alert : Alert(alertAckTime == null)
    not( Alert( this == $alert ) over window:time( 3d ) )
  then
    alertService.deleteAlert($alert);
end

rule "fullGC"
  salience 0
  when
    $sessionClock : SessionClock()
    $alert : Alert()
    not( Alert( this == $alert ) over window:time( 8d ) )
  then
    alertService.deleteAlert($alert);
end
