package org.opennms.horizon.alertservice.drools;

import java.util.Date;
import org.kie.api.time.SessionClock;
import org.opennms.horizon.alertservice.db.entity.Alert;
import org.opennms.horizon.alertservice.model.AlertSeverity;

global org.opennms.horizon.alertservice.api.AlertService alertService;

declare org.opennms.horizon.alertservice.db.entity.Alert
    @role(event)
    @timestamp(lastUpdateTime)
end

rule "cosmicClear"
  salience 100
  when
    $sessionClock : SessionClock()
    $clear : Alert(alertType == Alert.RESOLUTION_TYPE)
    $trigger : Alert(alertType == Alert.PROBLEM_TYPE, severity.isGreaterThanOrEqual(AlertSeverity.NORMAL), reductionKey == $clear.clearKey, lastEventTime <= $clear.lastEventTime)
  then
    alertService.clearAlert($trigger, new Date($sessionClock.getCurrentTime()));
end

rule "unclear"
  when
    $sessionClock : SessionClock()
    $trigger : Alert(alertType == Alert.PROBLEM_TYPE,
                         severity == AlertSeverity.CLEARED,
                         getLastEventSeverity().isGreaterThan(AlertSeverity.CLEARED),
                         lastEventTime > lastAutomationTime)
  then
    alertService.unclearAlert($trigger, new Date($sessionClock.getCurrentTime()));
end

