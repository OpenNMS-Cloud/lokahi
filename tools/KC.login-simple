#!/bin/bash
##
## PURPOSE: Simplified curl request to login to Keycloak.  All values are hard-coded.
##

curl -X POST \
	-H 'Content-Type: application/x-www-form-urlencoded' \
	-d 'username=admin' \
	-d 'password=admin' \
	-d 'grant_type=password' \
	-d 'scope=openid' \
	-d 'client_id=horizon-stream' \
	http://localhost:28080/realms/opennms/protocol/openid-connect/token

