<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0"
           xsi:schemaLocation="
                http://www.osgi.org/xmlns/blueprint/v1.0.0
                https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

                http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0
                http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.3.0.xsd
            ">

    <cm:cm-properties id="openms-datasource-properties" persistent-id="org.ops4j.datasource-opennms"/>
    <cm:cm-properties id="openms-admin-datasource-properties" persistent-id="org.ops4j.datasource-opennmsAdmin"/>

    <reference id="adminDatasource" interface="javax.sql.DataSource" filter="(osgi.jndi.service.name=opennmsAdmin)">
        <!--<reference-listener ref="openNmsDatabasePreHook" bind-method="onAdminDatasourceBind"/>-->
    </reference>

    <bean id="openNmsDatabasePreHook" class="org.opennms.core.schema.OpenNMSDatabasePrehook">
        <property name="adminDatasource" ref="adminDatasource"/>
        <property name="opennmsAdminDatasourceProperties" ref="opennms-datasource-properties"/>
        <property name="opennmsDatasourceProperties" ref="openms-admin-datasource-properties"/>
    </bean>

    <service ref="openNmsDatabasePreHook" interface="org.ops4j.pax.jdbc.hook.PreHook"/>
</blueprint>