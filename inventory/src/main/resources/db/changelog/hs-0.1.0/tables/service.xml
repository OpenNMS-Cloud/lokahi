<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

<!--    todo: potentially remove this in favor of an Enum-->

    <changeSet author="tbigg" id="0.1.0-service">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="service"/>
            </not>
        </preConditions>

        <createTable tableName="service">
            <column name="serviceid" type="integer">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_serviceid"/>
            </column>
            <column name="servicename" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
