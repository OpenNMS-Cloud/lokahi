      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.opennms.horizon.jmx</groupId>
      <artifactId>api</artifactId>
      <version>${project.version}</version>
    </dependency>
      <dependency>
          <groupId>org.opennms.horizon.config</groupId>
          <artifactId>api</artifactId>
