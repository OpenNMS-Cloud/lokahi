<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0 
		https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
">

    <reference id="pingerFactory" interface="org.opennms.netmgt.icmp.PingerFactory" />

    <bean id="pingProxyRpcModule" class="org.opennms.horizon.minion.icmp.proxy.module.impl.PingProxyRpcModuleImpl">
        <property name="pingerFactory" ref="pingerFactory" />
    </bean>
    <service ref="pingProxyRpcModule">
        <interfaces>
            <value>org.opennms.horizon.minion.icmp.proxy.common.PingProxyRpcModule</value>
            <value>org.opennms.horizon.ipc.rpc.api.RpcModule</value>
        </interfaces>
    </service>

    <bean id="pingSweepRpcModule" class="org.opennms.horizon.minion.icmp.proxy.module.impl.PingSweepRpcModuleImpl">
        <property name="pingerFactory" ref="pingerFactory" />
    </bean>
    <service ref="pingSweepRpcModule">
        <interfaces>
            <value>org.opennms.horizon.minion.icmp.proxy.common.PingSweepRpcModule</value>
            <value>org.opennms.horizon.ipc.rpc.api.RpcModule</value>
        </interfaces>
    </service>

</blueprint>
