<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="tbigg" id="0.1.0-ip-interface">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ip_interface"/>
            </not>
        </preConditions>

        <createTable tableName="ip_interface">
            <column name="id" type="BIGINT" autoIncrement="true"/>
            <column name="tenant_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="node_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="ip_address" type="INET">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="ip_interface" columnNames="id" constraintName="pk_ip_interface_id"/>

        <addForeignKeyConstraint constraintName="fk_node_id" onDelete="CASCADE"
                                 baseTableName="ip_interface" baseColumnNames="node_id"
                                 referencedTableName="node" referencedColumnNames="id"/>

        <createIndex tableName="ip_interface" indexName="ip_interface_ip_addr_idx">
            <column name="ip_address"/>
        </createIndex>

        <createIndex tableName="ip_interface" indexName="ip_interface_node_id_idx">
            <column name="node_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
