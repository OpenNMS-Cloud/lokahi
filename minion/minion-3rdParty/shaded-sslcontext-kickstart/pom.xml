<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>minion-3rdParty</artifactId>
        <groupId>org.opennms.horizon.minion</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

<!--    NOTE: The OSGi bundle for Ignite is not built correctly and therefore not usable in Karaf. This shades the regular Ignite -->
<!--    jar correctly show that it can be used.-->

    <artifactId>shaded-sslcontext-kickstart</artifactId>
    <name>OpenNMS Horizon Stream :: Minion :: 3rd Party :: SSL Context Kickstart (shaded)</name>
    <packaging>bundle</packaging>

    <dependencies>
        <dependency>
            <groupId>io.github.hakky54</groupId>
            <artifactId>sslcontext-kickstart</artifactId>
        </dependency>
        <dependency>
            <groupId>io.github.hakky54</groupId>
            <artifactId>sslcontext-kickstart-for-pem</artifactId>
        </dependency>
    </dependencies>

    <build>
        <defaultGoal>install</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions combine.self="override">
                        <Import-Package>
                            com.apple*;resolution:=optional,
                            com.sun*;resolution:=optional,
                            sun*;resolution:=optional,
                            jdk.internal*;;resolution:=optional,
                            javax.swing*;;resolution:=optional,
                            org.apache.log4j.varia;resolution:=optional,
                            *
                        </Import-Package>
                        <Export-Package>
                            nl.altindag.ssl,
                            nl.altindag.ssl.util,
                            nl.altindag.ssl.decryptor,
                            nl.altindag.ssl.exception,
                            nl.altindag.ssl.hostnameverifier,
                            nl.altindag.ssl.keymanager,
                            nl.altindag.ssl.model,
                            nl.altindag.ssl.socket,
                            nl.altindag.ssl.trustmanager
                        </Export-Package>
                        <Embed-Dependency>*;groupId=io.github.hakky54;inline=true</Embed-Dependency>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
