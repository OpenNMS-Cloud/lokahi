<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="aurangzeb" id="0.1.0-event-add-column-description">
        <addColumn tableName="event">
            <column name="description" type="text" />
        </addColumn>
    </changeSet>
    <changeSet author="aurangzeb" id="0.1.0-event-add-column-logMessage">
        <addColumn tableName="event">
            <column name="log_message" type="text" />
        </addColumn>
    </changeSet>
    <changeSet author="aurangzeb" id="0.1.0-event-add-column-locationName">
        <addColumn tableName="event">
            <column name="location_name" type="VARCHAR(256)" />
        </addColumn>
    </changeSet>
</databaseChangeLog>
