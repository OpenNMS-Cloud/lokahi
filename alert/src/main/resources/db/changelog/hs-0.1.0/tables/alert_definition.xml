<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="rellis" id="hs-0.1.0-drop_table">
        <preConditions onFail="MARK_RAN"><tableExists schemaName="alert" tableName="alert_definition"/></preConditions>
        <dropTable cascadeConstraints="true"
                   schemaName="alert"
                   tableName="alert_definition"/>
    </changeSet>

    <changeSet author="rellis" id="hs-0.1.0-alert_definition">

        <createTable tableName="alert_definition">

            <column name="tenant_id" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="uei" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="reduction_key" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="clear_key" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="type" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="managed_object_type" type="text">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addPrimaryKey columnNames="tenant_id, uei"
                       constraintName="alert_definition_pk"
                       tableName="alert_definition"/>

    </changeSet>
</databaseChangeLog>
