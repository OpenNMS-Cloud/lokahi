<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0 
		https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
">

    <reference id="rpcClientFactory" interface="org.opennms.horizon.ipc.rpc.api.RpcClientFactory"/>
    <reference id="minionManager" interface="org.opennms.core.ipc.grpc.server.manager.MinionManager"/>
    <reference id="metricsAdapter" interface="org.opennms.horizon.metrics.api.OnmsMetricsAdapter"/>
    <reference id="eventSubscriptionService" interface="org.opennms.horizon.events.api.EventSubscriptionService"/>
    <reference id="sessionUtils" interface="org.opennms.horizon.db.dao.api.SessionUtils" />
    <reference id="nodeDao" interface="org.opennms.horizon.db.dao.api.NodeDao" />
    <reference id="ipInterfaceDao" interface="org.opennms.horizon.db.dao.api.IpInterfaceDao" />
    <reference id="locationAwarePingClient" interface="org.opennms.netmgt.icmp.proxy.LocationAwarePingClient"/>
    <reference id="locationAwareSnmpClient" interface="org.opennms.horizon.shared.snmp.proxy.LocationAwareSnmpClient"/>

    <bean id="minionRpcMonitorManager" class="org.opennms.horizon.core.monitor.MinionRpcMonitorManager" init-method="init">
        <property name="rpcClientFactory" ref="rpcClientFactory"/>
        <property name="metricsAdapter" ref="metricsAdapter"/>
    </bean>

    <bean id="minionRpcMonitorMinionManagerListener" class="org.opennms.horizon.core.monitor.MinionRpcMonitorMinionManagerListener">
        <property name="minionRpcMonitorManager" ref="minionRpcMonitorManager"/>
    </bean>

    <bean id="minionMonitorListenerRegistration" class="org.opennms.core.ipc.grpc.server.manager.util.MinionManagerListenerRegistrar"
          init-method="init" destroy-method="shutdown">

        <property name="minionManager" ref="minionManager"/>
        <property name="listener" ref="minionRpcMonitorMinionManagerListener"/>
    </bean>

    <bean id="deviceMonitorManager" class="org.opennms.horizon.core.monitor.DeviceMonitorManager"
          init-method="init" destroy-method="shutdown">
        <argument ref="eventSubscriptionService"/>
        <argument ref="nodeDao"/>
        <argument ref="ipInterfaceDao"/>
        <argument ref="sessionUtils"/>
        <argument ref="locationAwarePingClient"/>
        <argument ref="locationAwareSnmpClient"/>
        <argument ref="metricsAdapter"/>
    </bean>
</blueprint>
