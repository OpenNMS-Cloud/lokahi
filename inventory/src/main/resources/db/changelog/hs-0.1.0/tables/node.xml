<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="tbigg" id="0.1.0-node">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="node"/>
            </not>
        </preConditions>

        <createTable tableName="node">
<!--            todo: type - bigint, bigserial -->
            <column name="id" type="integer">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_nodeid"/>
            </column>

<!--          todo:  add teneant ID, type: placeholder, maybe string based, tennant id comes from portal (assign) -->

            <!-- Time node was added to the database -->
            <column name="create_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <!-- User-friendly name associated with the node. -->
            <column name="nodelabel" type="varchar(256)"/>

        </createTable>

        <addNotNullConstraint tableName="node" columnName="nodelabel"/>

<!--        todo: add (nodeid, tenant) as an index-->

        <createIndex tableName="node" indexName="node_label_idx">
            <column name="nodelabel"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
