<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0"
    xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0 
		https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

		http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0
		http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.3.0.xsd
">

    <cm:property-placeholder persistent-id="org.opennms.core.monitor"
                             update-strategy="reload">
        <cm:default-properties>
            <cm:property name="ignite.useKubernetes" value="true"/>
            <cm:property name="ignite.kubernetesServiceName" value="horizon-stream-ignite-core"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="workerIgniteConfiguration" class="org.opennms.horizon.core.ignite.WorkerIgniteConfiguration">
        <property name="useKubernetes" value="${ignite.useKubernetes}"/>
        <property name="kubernetesServiceName" value="${ignite.kubernetesServiceName}"/>
    </bean>

    <bean id="ignite" class="org.opennms.horizon.core.ignite.IgnitionFactory" factory-method="create" destroy-method="close">
        <argument ref="workerIgniteConfiguration"/>
    </bean>

    <service ref="ignite" interface="org.apache.ignite.Ignite"/>
</blueprint>
