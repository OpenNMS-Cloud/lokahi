<?xml version="1.0" encoding="utf-8" ?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
    xsi:schemaLocation="
        http://www.osgi.org/xmlns/blueprint/v1.0.0
        https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
    ">

    <cm:property-placeholder persistent-id="org.opentelemetry.exporter.prometheus" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="host" value="0.0.0.0" />
            <cm:property name="port" value="9464" />
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="prometheusExporter" class="org.opennms.horizon.minion.opentelemetry.prometheus.internal.PrometheusExporter" init-method="start" destroy-method="stop">
        <argument value="${host}" />
        <argument value="${port}" />
    </bean>
    <service id="managedPrometheusExporter" interface="io.opentelemetry.sdk.metrics.export.MetricReader" ref="prometheusExporter" />

</blueprint>
